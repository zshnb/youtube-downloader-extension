{
  "name": "youtube-downloader-extension",
  "displayName": "Youtube downloader",
  "version": "0.0.1",
  "description": "A extension allow user download youtube video, thumbnail and subtitle on youtube website",
  "author": "zheng sihua",
  "scripts": {
    "dev": "plasmo dev",
    "build:chrome": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.19.1",
    "@ant-design/icons": "^5.3.6",
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@plasmohq/storage": "^1.9.3",
    "antd": "^5.16.1",
    "dom-parser": "^1.1.5",
    "lucide-react": "^0.368.0",
    "m3u8stream": "^0.8.6",
    "miniget": "^4.2.3",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sax": "^1.1.3",
    "srt-parser-2": "^1.2.3",
    "tailwindcss": "3.4.1",
    "timers": "^0.1.1",
    "youtube-transcript": "^1.1.0",
    "yt_metadata": "^0.0.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "downloads",
      "storage"
    ]
  }
}
